<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="36dp"
    android:layout_marginBottom="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/contacts_icon_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/ContactsButtonIcon"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_communication_call" />

        <TextView
            android:background="@drawable/cardboard_ripple"
            android:id="@+id/contacts_item_voice_call"
            android:text="@string/contact_voice_call"
            style="@style/ContactsButtonText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_centerVertical="true"
            android:background="@color/dividerColor"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="56dp" />

        <TextView
            android:background="@drawable/cardboard_ripple"
            android:id="@+id/contacts_item_video_call"
            android:layout_below="@id/contacts_item_voice_call"
            android:text="@string/contact_video_call"
            style="@style/ContactsButtonText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>
