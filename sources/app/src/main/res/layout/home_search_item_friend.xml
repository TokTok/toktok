<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:scaleType="centerCrop"
            android:minHeight="200dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/home_search_friend_img"
            android:src="@drawable/lorem"
            android:cropToPadding="false" />

        <LinearLayout
            android:layout_alignBottom="@id/home_search_friend_img"
            android:background="#a0E91E63"
            android:layout_width="match_parent"
            android:padding="16dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="center"
                android:id="@+id/home_friends_status"
                style="@style/CircleUserStatus"
                android:src="@drawable/status_circle"
                android:tint="@color/statusOnline" />

            <TextView
                android:id="@+id/home_search_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text="Lorem Ipsum"
                android:textColor="@color/textWhiteColor"
                android:textSize="19sp" />

        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
