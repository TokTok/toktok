<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/homeColorToolbar</item>
        <item name="colorPrimaryDark">@color/homeColorStatusBar</item>
        <item name="android:windowBackground">@color/backgroundColor</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:navigationBarColor">@color/contactsTransparentBar</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="actionModeStyle">@style/ActionMode</item>
        <item name="android:actionModeStyle">@style/ActionMode</item>
        <item name="android:actionModeCloseDrawable">@drawable/ic_action_navigation_arrow_back</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:colorEdgeEffect">@color/colorAccent</item>
    </style>

    <style name="ActionMode" parent="Widget.AppCompat.ActionMode">
        <item name="android:background">@color/backgroundColor</item>
        <item name="background">@color/backgroundColor</item>
        <item name="android:titleTextStyle">@style/TitleTextStyle</item>
        <item name="titleTextStyle">@style/TitleTextStyle</item>
    </style>

    <style name="TitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/textDarkColor</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/abc_slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/abc_slide_out_bottom</item>
    </style>

    <style name="DialogSlideAnimation" parent="Theme.AppCompat.Dialog">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

    <style name="BasicFloatingActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">end|bottom</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="CircleUserStatus">
        <item name="android:src">@drawable/status_circle</item>
        <item name="android:layout_width">12dp</item>
        <item name="android:layout_height">12dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="RecyclerView">
        <item name="android:scrollbars">vertical</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="SmallUserImage">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
    </style>


    <style name="ContactsButtonText">
        <item name="android:layout_marginLeft">56dp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:padding">18dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/textDarkColor</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ContactsButtonIcon">
        <item name="android:padding">16dp</item>
    </style>


    <style name="MessageAttachmentsItem">
        <item name="android:background">@drawable/cardboard_ripple</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MessageAttachmentsItem.text">
        <item name="android:clickable">false</item>
        <item name="android:background">@null</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/textDarkColor</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">32dp</item>
    </style>

    <style name="ContactsTextExtended" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/textWhiteColor</item>
        <item name="android:textSize">25sp</item>
    </style>

</resources>
